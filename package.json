{
  "name": "woolsocks-extension",
  "private": true,
  "version": "0.10.0",
  "description": "Browser extension for automatic cashback and voucher discovery",
  "keywords": [
    "browser-extension",
    "cashback",
    "vouchers",
    "shopping",
    "chrome-extension",
    "firefox-addon"
  ],
  "author": "Woolsocks <team@woolsocks.eu>",
  "license": "MIT",
  "homepage": "https://woolsocks.eu",
  "repository": {
    "type": "git",
    "url": "https://github.com/amsterdam-platform-creation/browser-extensions.git"
  },
  "bugs": {
    "url": "https://github.com/amsterdam-platform-creation/browser-extensions/issues"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:chrome",
    "build:chrome": "tsc -b && vite build",
    "build:firefox": "tsc -b && vite build --config vite.firefox-mv2.config.ts",
    "build:firefox-mv3": "tsc -b && vite build --config vite.firefox.config.ts",
    "build:all": "npm run build:chrome && npm run build:firefox",
    "package": "node scripts/package-extension.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "sync-push": "node scripts/push-to-lokalise.js",
    "sync-pull": "node scripts/pull-from-lokalise.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.0",
    "@eslint/js": "^9.36.0",
    "@types/chrome": "^0.1.12",
    "@types/node": "^24.8.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "adm-zip": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "webextension-polyfill": "^0.12.0"
  }
}
