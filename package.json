{
  "name": "woolsocks-extension",
  "private": true,
  "version": "0.91.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:chrome": "tsc -b && vite build --config vite.chrome.config.ts",
    "build:safari": "tsc -b && vite build --config vite.safari.config.ts",
    "build:safari-xcode": "./scripts/build-safari.sh",
    "build:all": "npm run build:chrome && npm run build:safari",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.0",
    "@eslint/js": "^9.36.0",
    "@types/chrome": "^0.1.12",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/webextension-polyfill": "^0.12.4",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "webextension-polyfill": "^0.12.0"
  }
}
